{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "moduleResolution": "Node",
    "target": "ES2019",
    "lib": ["ES2019", "ESNext.AsyncIterable", "DOM"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "dist/",
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
